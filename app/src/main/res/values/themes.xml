<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="defaultLogoImageView">
        <item name="android:layout_width">@dimen/_105sdp</item>
        <item name="android:layout_height">@dimen/_105sdp</item>
        <item name="android:src">@drawable/light_logo</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="defaultRectButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:background">@drawable/gradient_transparent_back</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="PrimaryInputBox" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColor">@color/colorBlack</item>
        <!-- Hint color and label color in FALSE state ____ text -->
        <item name="android:textColorHint">@color/colorBlack</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State ___   ___ underline ___title+underline-->
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/colorBlack</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_right</item>
    </style>
    <style name="submitButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_marginTop">@dimen/_30sdp</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>
        <item name="android:background">@drawable/gradient_bg</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="formOuterLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>
    <style name="spinnerLineViewPrimaryColor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorBlack</item>
    </style>
    <style name="themeDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>
    <style name="formHorLineView">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorGray</item>
    </style>

</resources>